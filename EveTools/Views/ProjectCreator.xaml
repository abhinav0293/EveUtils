<Window x:Class="EveTools.Views.ProjectCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EveTools.Views"
        mc:Ignorable="d"
        Title="Project Creator" Height="200" Width="300" WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Background="#FF1CB6A1">
        <Label Content="Enter Name for Project:" FontWeight="Bold" FontSize="16" Margin="0,28,0,0"  HorizontalAlignment="Center" Foreground="#FFE5FB0B" Height="30" VerticalAlignment="Top"/>
        <TextBox x:Name="projName" Height="20" Width="200" HorizontalAlignment="Center"/>
        <Button Content="Create Project" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Width="137" Height="42" FontWeight="Bold" FontSize="16" Background="#FF79F314" ScrollViewer.VerticalScrollBarVisibility="Disabled" Foreground="#FF2654B8" BorderBrush="{x:Null}" Click="Button_Click"/>
    </Grid>
</Window>
